# =============================================================================
# SME Interview System - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# API KEYS
# =============================================================================

# Anthropic Claude API
ANTHROPIC_API_KEY=sk-ant-xxxxx

# Google Cloud TTS
# Option 1: API Key (simpler)
GOOGLE_API_KEY=AIzaxxxxx

# Option 2: Service Account (more secure, for production)
# GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/google-service-account.json

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Flask
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=change-this-in-production-use-a-random-string

# Server
HOST=0.0.0.0
PORT=5000

# =============================================================================
# INTERVIEW SETTINGS
# =============================================================================

# Claude model to use
CLAUDE_MODEL=claude-sonnet-4-20250514

# Max tokens for Claude responses (keep short for interview flow)
CLAUDE_MAX_TOKENS=300

# Context window management
MAX_CONTEXT_MESSAGES=30
EXTRACTION_INTERVAL=10

# =============================================================================
# TTS SETTINGS
# =============================================================================

# Default voice preset (options: budget_female, budget_male, standard_female, 
#                                standard_male, premium_female, premium_male)
DEFAULT_VOICE=premium_female

# Default speech rate (0.5 to 1.5, ignored for premium voices)
DEFAULT_SPEECH_RATE=0.95

# Language settings
TTS_LANGUAGE_CODE=en-US

# =============================================================================
# DATABASE
# =============================================================================

DATABASE_PATH=./data/interviews.db

# =============================================================================
# PATHS
# =============================================================================

AUDIO_CACHE_DIR=./data/audio_cache
EXPORTS_DIR=./data/exports
